page{
  font-size: 30rpx;
}
.swiper-tab{
    width: 100%;
    border-bottom: 2rpx solid #ccc;
    text-align: center;
    height: 88rpx;
    line-height: 88rpx;
    display: flex;
    flex-flow: row;
    justify-content: center;
}
.swiper-tab-item{
    width: 50%; 
    color:#434343;
    text-align: center;
}
.active{
    color:#F65959;
    border-bottom: 4rpx solid #F65959;
}
swiper{
  text-align: center;
}
.tab{
  width: 100%;
  height: 400rpx;
  background: rgb(245, 245, 245);
}
.swiper {
  width: 100%;
  flex: 1;
  height:100vh;
  overflow: scroll;
}
.list{
  width: 95%;
  height: 120rpx;
  background: white;
  margin: auto;
  margin-top: 30rpx;
  border-radius: 10rpx;
  display: flex;
  justify-content: flex-start;
}
.list_left{
  width: 45%;
  height: 100%;
}
.list_left view{
  width: 100%;
  height: 50%;
  text-indent: 30rpx;
}
.list_left view:nth-child(1){
  font-size: 35rpx;
  line-height: 2;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}
.list_left view:nth-child(2){
  font-size: 30rpx;
  color: rgb(115, 115, 115);
  line-height: 2;
}
.intermediate{
  height: 100%;
  text-align: center;
}
.release{
  width: 25%;
}
.list_right{
  height: 100%;
  text-align: right;
  color: rgb(220, 58, 47);
  line-height:3;
  font-size: 40rpx;
}
.right_release{
  width: 33%;
}
do_release{
  width: 22%;
