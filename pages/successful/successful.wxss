/* pages/successful/successful.wxss */

page {
  height: 100%;
  background-color: #f5f5f5;
}

.body {
  height: 100%;
}

.top {
  position: relative;
  height: 750rpx;
  background-color: #c63329;
}

/* 可以调钱额度的位置 */

.hongbaoedu {
  background-color: #eecc9c;
  color: #dc3a2f;
  position: absolute;
  top: 350rpx;
  left: 200rpx;
  padding: 15rpx;
  text-align: center;
  height: 300rpx;
  width: 300rpx;
  border-radius: 50%;
}

.topzi {
  display: block;
  font-size: 55rpx;
  text-align: center;
  color: #eecc9c;
}

.headbox {
  width: 120rpx;
  height: 120rpx;
  background-color: #f0bbaf;
  padding: 5rpx;
  margin: auto;
  border-radius: 50%;
}

.headurl {
  width: 100%;
  height: 100%;
  border-radius: 50%;
}

.tips {
  color: #eecc9c;
  text-align: center;
  margin-top: 15rpx;
  margin-bottom: 30rpx;
  display: block;
}

.Redenvelopes {
  width: 100%;
  height: 500rpx;
  padding-top: 30rpx;
  background-color: #dc3a2f;
  border-bottom-left-radius: 50%;
  border-bottom-right-radius: 50%;
  box-shadow: 1px 1px 10px 5px rgba(0, 0, 0, 0.08);
}

.circle {
  border-radius: 50%;
  display: flex;
  align-items: center;
  font-size: 45rpx;
  width: 100%;
  height: 100%;
  background-color: white;
}

.share {
  background-color: #09ba07;
  line-height: 70rpx;
  font-size: 35rpx;
  border: 1px solid #a6d6a7;
  width: 70%;
  color: white;
}

.generate {
  background-color: #fbfbfd;
  border: 1px solid #f2f2f2;
  margin-top: 20px;
  font-size: 35rpx;
  line-height: 70rpx;
  width: 70%;
}

.buttons {
  padding-top: 20px;
}
