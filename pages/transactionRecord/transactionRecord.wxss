/* pages/transactionRecord/transactionRecord.wxss */
/* 交易记录页面 */
/* 设置循环样式 */
.transaction{
  width: 100%;
  height: 160rpx;
  border-bottom: 1rpx solid #aaaaaa;
}
/* 设置左样式 */
.left{
  float: left;
  margin: 20rpx;
}
/*设置字体*/
.left text{
  display: block;
  padding: 5rpx
}
/*设置时间样式*/
.leftTow{
  font-size: 30rpx;
  color: #aaa
}
/* 设置右样式 */
.right{
  float: right;
  margin:60rpx 20rpx 0rpx
}
/*设置支出*/
.rightColorOne{
  color: #000
}
/*设置收入*/
.rightColorTow{
  color: rgb(225, 56, 43)
}

