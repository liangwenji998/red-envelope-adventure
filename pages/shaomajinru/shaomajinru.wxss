page{
  background: rgb(245, 245, 245);
}
.top{
  width: 100%;
  height: 500rpx;
  background-color: #dc3a2f;
}
.text{
  width: 600rpx;
  text-align: center;
  margin: 0 auto;
  padding: 40rpx;
  color: #EECC9C;
}
.shengyu{
  color: #EECC9C;
  text-align: center;
}
.yue{
  font-size: 40px;
}
.hongren{
  font-size: 16px;
  display: flex;
  margin-top: 20rpx;
  flex-direction: row;
  justify-content:space-between;
  color: white;
}
.hong{
  margin-left: 20rpx;
}
.ren{
  margin-right: 20rpx;
}
button{
