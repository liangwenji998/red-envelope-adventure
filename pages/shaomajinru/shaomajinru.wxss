}
.center{
  width: 100%;
  color: rgb(134, 134, 134);
  background-color: rgb(223, 222, 222);
  font-size: 32rpx;
  padding: 30rpx;
}
.btall{
  width: 98%;
  height: 120rpx;
  margin: auto;
  border-radius: 20rpx;
  background: white;
  margin-top: 20rpx;
}
.bottom{
  display: flex;
  justify-content: center;
  margin: 20rpx;
}
.bt{
  width: 40%;
  height: 100%;
  display: flex;
  justify-content: center;
  text-align:center;
  margin: auto;
